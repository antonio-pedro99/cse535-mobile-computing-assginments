<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.iiitd.antonio20028.sensorgrama.ui.OnBoardingFragment"
        android:label="OnBoardingFragment"
        tools:layout="@layout/fragment_onboarding_layout">
        <action
            android:id="@+id/action_onBoardingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.iiitd.antonio20028.sensorgrama.ui.HomeFragment"
        android:label="HomeFragment"
   tools:layout="@layout/fragment_home_layout"
        >
        <action
            android:id="@+id/action_homeFragment_to_geomagneticSensorFragment"
            app:destination="@id/geomagneticSensorFragment" />
    </fragment>
    <fragment
        android:id="@+id/geomagneticSensorFragment"
        android:name="com.iiitd.antonio20028.sensorgrama.ui.GeomagneticSensorFragment"
        android:label="GeomagneticSensorFragment"
        tools:layout="@layout/fragment_geomagnetic_sensor_layout"
        />
</navigation>